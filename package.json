{
  "name": "metalsmith-optimize-html",
  "version": "0.5.0",
  "description": "A Metalsmith plugin to optimize HTML files",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs",
    "default": "./lib/index.js"
  },
  "source": "src/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "coverage": "npm test && c8 report --reporter=text-lcov > ./coverage.info",
    "build": "microbundle --target node -f esm,cjs --strict --generateTypes=false",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"**/*.{js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "npm run build && node -r dotenv/config ./node_modules/.bin/release-it .",
    "release:check": "npm run build && node -r dotenv/config ./node_modules/.bin/release-it . --dry-run",
    "test": "c8 mocha -t 5000",
    "test:debug": "DEBUG=metalsmith-optimize-html:* npm test",
    "test:e2e": "serve -l 3000 test/fixtures"
  },
  "author": "Werner Glinka",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.16.2",
    "globals": "^16.0.0",
    "metalsmith": "^2.6.3",
    "microbundle": "^0.15.1",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "serve": "^14.2.4"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wernerglinka/metalsmith-optimize-html.git"
  }
}
